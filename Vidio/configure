#!/bin/bash



echo "Desired Directory: "
read input_variable
repo=$input_variable

workingDir="$(pwd)";

echo $repo
echo $workingDir


sudo python scripts/findAndReplace.py $workingDir/resources/blanks/VIDIOBASH $workingDir/scripts/VIDIOBASH $workingDir $repo
sudo python scripts/findAndReplace.py $workingDir/resources/blanks/VIDIODEPTHTESTER $workingDir/scripts/VIDIODEPTHTESTER $workingDir $repo
sudo python scripts/findAndReplace.py $workingDir/resources/blanks/VIDIOMETA $workingDir/scripts/VIDIOMETA $workingDir $repo
sudo python scripts/findAndReplace.py $workingDir/resources/blanks/MasterVidio $workingDir/MasterVidio $workingDir $repo

sudo chmod 777 $workingDir/scripts/VIDIOBASH
sudo chmod 777 $workingDir/scripts/VIDIODEPTHTESTER
sudo chmod 777 $workingDir/scripts/VIDIOMETA
sudo chmod 777 $workingDir/MasterVidio
